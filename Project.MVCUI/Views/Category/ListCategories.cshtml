@model CategoryVM

@{
    ViewBag.Title = "ListCategories";
}

<div class="jumbotron">
    Yeni bir kategori eklemek icin @Html.ActionLink("tıklayınız","AddCategory")
</div>






<div class="panel panel-primary">
<div class="panel panel-body">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Isim</th>
                <th>Aciklama</th>
                <th colspan="2" style="padding-left:75px">Islemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Category item in Model.Categories)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>
                        @Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })

                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;

                        @Html.ActionLink("Sil","DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger" })


                    </td>
                    
                </tr>
            }
        </tbody>


    </table>
</div>
</div>

